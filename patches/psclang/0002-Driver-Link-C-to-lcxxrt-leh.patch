From b47e9189367a97e2664061eb5f4ebf3534bf96a9 Mon Sep 17 00:00:00 2001
From: miguelzf <eligmu@gmail.com>
Date: Sun, 2 Oct 2016 11:00:41 -0400
Subject: [PATCH 02/13] [Driver] Link C++ to -lcxxrt -leh

---
 lib/Driver/ToolChain.cpp  |  2 ++
 lib/Driver/ToolChains.cpp | 15 ++++++++++-----
 lib/Driver/Tools.cpp      |  6 ++++--
 3 files changed, 16 insertions(+), 7 deletions(-)

diff --git a/lib/Driver/ToolChain.cpp b/lib/Driver/ToolChain.cpp
index 9023265..fb81fb9 100644
--- a/lib/Driver/ToolChain.cpp
+++ b/lib/Driver/ToolChain.cpp
@@ -646,6 +646,8 @@ void ToolChain::AddCXXStdlibLibArgs(const ArgList &Args,
   switch (Type) {
   case ToolChain::CST_Libcxx:
     CmdArgs.push_back("-lc++");
+    CmdArgs.push_back("-lcxxrt");
+    CmdArgs.push_back("-leh");
     break;
 
   case ToolChain::CST_Libstdcxx:
diff --git a/lib/Driver/ToolChains.cpp b/lib/Driver/ToolChains.cpp
index dd3b008..8bd664e 100644
--- a/lib/Driver/ToolChains.cpp
+++ b/lib/Driver/ToolChains.cpp
@@ -736,6 +736,7 @@ void DarwinClang::AddCXXStdlibLibArgs(const ArgList &Args,
   switch (Type) {
   case ToolChain::CST_Libcxx:
     CmdArgs.push_back("-lc++");
+    CmdArgs.push_back("-lcxxrt");
     break;
 
   case ToolChain::CST_Libstdcxx:
@@ -2939,8 +2940,8 @@ void MipsLLVMToolChain::AddCXXStdlibLibArgs(const ArgList &Args,
          "Only -lc++ (aka libxx) is suported in this toolchain.");
 
   CmdArgs.push_back("-lc++");
-  CmdArgs.push_back("-lc++abi");
-  CmdArgs.push_back("-lunwind");
+  CmdArgs.push_back("-lcxxrt");
+  CmdArgs.push_back("-leh");
 }
 
 std::string MipsLLVMToolChain::getCompilerRT(const ArgList &Args,
@@ -3241,6 +3242,8 @@ void NaClToolChain::AddCXXStdlibLibArgs(const ArgList &Args,
   // if the value is libc++, and emits an error for other values.
   GetCXXStdlibType(Args);
   CmdArgs.push_back("-lc++");
+  CmdArgs.push_back("-lcxxrt");
+  CmdArgs.push_back("-leh");
 }
 
 void NaClToolChain::AddClangCXXStdlibIncludeArgs(const ArgList &DriverArgs,
@@ -3358,8 +3361,8 @@ void CloudABI::AddClangCXXStdlibIncludeArgs(const ArgList &DriverArgs,
 void CloudABI::AddCXXStdlibLibArgs(const ArgList &Args,
                                    ArgStringList &CmdArgs) const {
   CmdArgs.push_back("-lc++");
-  CmdArgs.push_back("-lc++abi");
-  CmdArgs.push_back("-lunwind");
+  CmdArgs.push_back("-lcxxrt");
+  CmdArgs.push_back("-leh");
 }
 
 Tool *CloudABI::buildLinker() const {
@@ -3489,7 +3492,7 @@ void Bitrig::AddCXXStdlibLibArgs(const ArgList &Args,
   switch (GetCXXStdlibType(Args)) {
   case ToolChain::CST_Libcxx:
     CmdArgs.push_back("-lc++");
-    CmdArgs.push_back("-lc++abi");
+    CmdArgs.push_back("-lcxxrt");
     CmdArgs.push_back("-lpthread");
     break;
   case ToolChain::CST_Libstdcxx:
@@ -3548,6 +3551,8 @@ void FreeBSD::AddCXXStdlibLibArgs(const ArgList &Args,
   switch (Type) {
   case ToolChain::CST_Libcxx:
     CmdArgs.push_back(Profiling ? "-lc++_p" : "-lc++");
+    CmdArgs.push_back("-lcxxrt");
+    CmdArgs.push_back("-leh");
     break;
 
   case ToolChain::CST_Libstdcxx:
diff --git a/lib/Driver/Tools.cpp b/lib/Driver/Tools.cpp
index db47384..2646b95 100644
--- a/lib/Driver/Tools.cpp
+++ b/lib/Driver/Tools.cpp
@@ -3243,9 +3243,11 @@ static void linkXRayRuntimeDeps(const ToolChain &TC, const ArgList &Args,
   CmdArgs.push_back("-lrt");
   CmdArgs.push_back("-lm");
   CmdArgs.push_back("-latomic");
-  if (TC.GetCXXStdlibType(Args) == ToolChain::CST_Libcxx)
+  if (TC.GetCXXStdlibType(Args) == ToolChain::CST_Libcxx) {
     CmdArgs.push_back("-lc++");
-  else
+    CmdArgs.push_back("-lcxxrt");
+    CmdArgs.push_back("-leh");
+  } else
     CmdArgs.push_back("-lstdc++");
   if (TC.getTriple().getOS() != llvm::Triple::FreeBSD)
     CmdArgs.push_back("-ldl");
-- 
